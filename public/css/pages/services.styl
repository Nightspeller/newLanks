.service
  width 100%
  .section__text
    padding 0 10px
    text-align justify
  .service-title
    width 100%
    font-size 18px
    color #000
    margin 1em 0
    h4
    .material-icons
      float right
      font-size 36px
      color #40c4ff
  .small_p
    font-size 14px
    line-height 1.5em

.service:hover
  background #f1f1f1
  cursor pointer

.cargo-calculator
  position relative
  text-align center
  >div
    display inline-block
    position relative
    iframe
      max-width 450px
      height 500px
      margin auto
    #iframe-cover-1
      position absolute
      top 0
      left 0
      width 100%
      height 100px
      background #f7df34
      img
        height 90%
        margin 10px
    #iframe-cover-2
      position absolute
      top 250px
      left 0
      width 100%
      height 50px
      background #f7df34
    #iframe-cover-3
      position absolute
      top 450px
      left 0
      width 100%
      height 50px
      background #f7df34
      button
        margin 5px